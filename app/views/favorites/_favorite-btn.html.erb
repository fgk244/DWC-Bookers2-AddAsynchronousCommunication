<% if book.favorited_by?(current_user) %>
  <%= link_to book_favorites_path(book), method: :delete, remote: true do %>
  <div class="fas fa-heart heart_red"><%= book.favorites.count %></div>
  <% end %>
<% else %>
  <%= link_to book_favorites_path(book), method: :post, remote: true do %>
  <div class="fas fa-heart heart_blue"><%= book.favorites.count %></div>
  <% end %>
<% end %>
