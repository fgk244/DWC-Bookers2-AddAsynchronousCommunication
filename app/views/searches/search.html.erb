

<table class="table table-hover table-inverse">

  <!--検索対象モデルがUserの時 -->
  <% if @range == "User" %>
   <h5>Users search for"<%= params[:word] %>"</h5>
   <thead>
    <tr>
     <th></th>
     <th>Name</th>
     <th></th>
     <th colspan="3"></th>
    </tr>
  </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
      <td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></td>
      <td><%= user.name%></td>
      <td><%= link_to "Show", user, class: "user_#{user.id}" %></td>
     </tr>
      <% end %>
    </tbody>
  <% else %>
    <!--検索対象モデルがUserではない時(= 検索対象モデルがBookの時) -->
     <h5>Books search for"<%= params[:word] %>"</h5>
     <thead>
    <tr>
     <th></th>
     <th></th>
     <th>Title</th>
     <th>Opinion</th>
     <th colspan="3"></th>
    </tr>
  </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
      <td>
       <%= link_to(book.user) do %>
        <td><%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></td>
       <% end %>
      </td>
      <td>
       <%= link_to book.title, book, class: "book_#{book.id}" %>
      </td>
      <td><%= book.body %></td>
     </tr>
      <% end %>
    </tbody>
  <% end %>
</table>